alias psu='systemctl suspend'
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias ll='ls -alF --color=auto'
alias la='ls -A --color=auto'
alias l='ls -CF --color=auto'
alias perm='getfacl'
alias setmon='xrandr --output HDMI-1-0 --primary --auto --right-of eDP'
alias ulogout='gnome-session-quit --no-prompt'
alias i3blur='~/.config/i3/i3blur-lock.sh'
alias nettest='speedtest --no-upload --bytes  --secure '
alias dcu='docker compose up'
alias dcud='docker compose up -d'
alias drmi-all='docker rmi -f $(docker images -aq)'
alias drm-all='docker rm -f $(docker ps -aq)'
alias update='sudo apt update && sudo apt upgrade -y'
